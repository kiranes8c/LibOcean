<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <solid android:color="@color/toolbar_background"/>
        </shape>
    </item>
    <item
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient
                android:angle="135"
                android:centerColor="#96003C"
                android:endColor="#FA000E69"
                android:startColor="#E4A506"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
